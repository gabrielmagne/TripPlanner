<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.eia_fr.tic.magnemazzoleni.tripplanner.TripFragment"
    android:id="@+id/fragment_trip_list">

    <GridView android:id="@+id/list_trips" android:layout_width="match_parent"
        android:layout_height="match_parent" android:numColumns="2"
        android:choiceMode="singleChoice" />

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/list_add_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="0dp"
        android:background="#1E88E5"
        materialdesign:animate="true"
        materialdesign:iconDrawable="@mipmap/ic_action_new"/>

</RelativeLayout>
